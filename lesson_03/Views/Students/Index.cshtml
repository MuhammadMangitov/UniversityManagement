@using static Bogus.DataSets.Name
@model IEnumerable<lesson_03.Entities.Student>

@{
    ViewData["Title"] = "Index";
}

<style>
    #plus{
        width:5px;
        height:5px;
    }
</style>

<h1>Student</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i id="plus" class="bi bi-person-plus"></i>
       Create New
    </a>
</p>

<form asp-controller="Students" asp-action="Index">
    <p>
        <div class="input-group">
            <div>
                <select asp-items="@ViewBag.Genders" name="studentGender" class="form-control-sm mr-sm-2">
                    <option value="">All Genders</option>
                    
                </select>
            </div>
            <div>
                <input type="text" name="SearchString" value="@ViewBag.Search"
                       class="form-control form-control-sm mr-sm-2"  placeholder="Search" />
            </div>
            <div>
                <button class="btn btn-sm btn-outline-secondary mr-sm-2" type="submit">Filter</button>
            </div>
        </div>
    </p>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentEmial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #007bfe; color: white;">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn" style="background-color: #FF5733; color: white;">
                        <i class="bi bi-info-circle-fill"></i>
                        Details
                    </a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
