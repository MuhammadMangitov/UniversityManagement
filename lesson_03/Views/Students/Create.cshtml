@model lesson_03.Entities.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirsName" class="control-label"></label>
                <input asp-for="FirsName" class="form-control" />
                <span asp-validation-for="FirsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentEmial" class="control-label"></label>
                <input asp-for="StudentEmial" class="form-control" />
                <span asp-validation-for="StudentEmial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Gender</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="maleRadio" name="Gender" value="Male">
                    <label class="form-check-label" for="maleRadio">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="femaleRadio" name="Gender" value="Female">
                    <label class="form-check-label" for="femaleRadio">Famale</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px;">
        Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
