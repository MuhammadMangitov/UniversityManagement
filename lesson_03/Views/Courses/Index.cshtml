@model IEnumerable<lesson_03.Entities.Course>

@{
    ViewData["Title"] = "Index";
}
<h1>Course</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-square-dotted"></i>
        Create New
    </a>
</p>

<form asp-controller="Courses" asp-action="Index">
    <p>
        <div class="input-group">
            <div>
                <select asp-items="@ViewBag.SelectedCategory" name="categoryId" class="form-control-sm mr-sm-2">
                    <option value="">All Category</option>
                </select>
            </div>
            <div>
                <input type="text" name="searchString" value="@ViewBag.Search"
                       class="form-control form-control-sm mr-sm-2" placeholder="Search" />
            </div>
            <div>
                <button class="btn btn-sm btn-outline-secondary mr-sm-2" type="submit">Filter</button>
            </div>
        </div>
    </p>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hourse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hourse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #007bfe; color: white;">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn" style="background-color: #FF5733; color: white;">
                        <i class="bi bi-info-circle-fill"></i>
                        Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
