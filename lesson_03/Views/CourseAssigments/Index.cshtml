@model IEnumerable<lesson_03.Entities.CourseAssigment>

@{
    ViewData["Title"] = "Index";
}

<h1>Course Assigment</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-square-dotted"></i>
        Create New
    </a>
</p>
<form asp-controller="CourseAssigments" asp-action="Index">
    <p>
        <div class="input-group">
            <div>
                <input type="text" name="SearchString" value="@ViewBag.Search"
                       class="form-control form-control-sm mr-sm-2" placeholder="Search rooms" />
            </div>
            <div>
                <button class="btn btn-sm btn-outline-secondary mr-sm-2" type="submit">Filter</button>
            </div>
        </div>
    </p>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.FirstName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #007bfe; color: white;">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn" style="background-color: #FF5733; color: white;">
                        <i class="bi bi-info-circle-fill"></i>
                        Details
                    </a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
